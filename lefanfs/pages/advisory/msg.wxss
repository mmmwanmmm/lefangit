}
.lefan-msg-arrow{
    position: relative;
  padding-right: 30px;
  /*height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;*/
    border-right: 1rpx solid #D9D9D9;
}
.lefan-msg-arrow:before {
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #C8C8CD;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
          transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: relative;
  top: -2px;
  position: absolute;
  top: 50%;
  right: 15px;
  margin-top: -4px;
}