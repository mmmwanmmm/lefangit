  <form report-submit="true" bindsubmit="formSubmit">
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view style="padding-top:10px;"></view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">姓名</view>
      </view>
      <view class="weui-cell__bd">
        <input disabled="{{optionsData.state===1?true:false}}" bindinput="name" name="name" class="weui-input" placeholder-class="psection" placeholder="请输入您的姓名" value="{{name}}"/>
      </view>
    </view>
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">手机号</view>
      </view>
      <view class="weui-cell__bd">
        <input disabled="{{optionsData.state===1?true:false}}" maxlength="11" type="number" value="{{phone}}" bindinput="phone" name="phone" class="weui-input" placeholder-class="psection" placeholder="请输入您的手机号码" />
      </view>
    </view>
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">微信号</view>
      </view>
      <view class="weui-cell__bd">
        <input disabled="{{optionsData.state===1?true:false}}" value="{{wechatId}}" bindinput="wechatId" name="wechatId" class="weui-input" placeholder-class="psection" placeholder="请输入您的微信号" />
      </view>
    </view>
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">职业</view>
      </view>
      <view class="weui-cell__bd">
        <radio-group name="zhiye" bindchange="zhiye">
          <view><radio disabled="{{optionsData.state===1?true:false}}" class="weui-input" value="1" checked="true">护士</radio></view>
          <view><radio  disabled="{{optionsData.state===1?true:false}}"class="weui-input" value="2" >医生</radio></view>
          <view><radio  disabled="{{optionsData.state===1?true:false}}"class="weui-input" value="3" >护工</radio></view>
          <view><radio  disabled="{{optionsData.state===1?true:false}}"class="weui-input" value="4" >调解组织</radio></view>
          <view><radio  disabled="{{optionsData.state===1?true:false}}"class="weui-input" value="5" >其他</radio></view>
        </radio-group>
      </view>
    </view>
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">所在地区</view>
      </view>
      <view class="lefan-cell__bd">
        <picker disabled="{{optionsData.state===1?true:false}}" name="province" bindchange="bindProvinceChange" value="{{provinceIndex}}" range="{{province}}" range-key="areaName">
          <view class="lefan-select">{{province[provinceIndex].areaName}}</view>
        </picker>
        <picker disabled="{{optionsData.state===1?true:false}}" name="city" bindchange="bindCityChange" value="{{cityIndex}}" range="{{city}}" range-key="areaName">
          <view class="lefan-select">{{city[cityIndex].areaName}}</view>
        </picker>
        <picker disabled="{{optionsData.state===1?true:false}}" name="county" bindchange="bindCountyChange" value="{{countyIndex}}" range="{{county}}" range-key="areaName">
          <view class="lefan-select">{{county[countyIndex].areaName}}</view>
        </picker>
      </view>
    </view>
<view wx:if="{{optionsData!=null}}" class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">状态</view>
      </view>
      <view class="weui-cell__bd">
        <text style="color:red;" class="weui-input" wx:if="{{optionsData.state===1}}">待审核</text>
        <text class="weui-input" wx:if="{{optionsData.state===2}}">审核通过</text>
        <text style="color:red;" class="weui-input" wx:if="{{optionsData.state===3}}">审核不通过</text>
      </view>
    </view>
   
    <view wx:if="{{optionsData.state===3}}" class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">原因</view>
      </view>
      <view class="weui-cell__bd">
        <text class="weui-input">{{optionsData.reason}}</text>
      </view>
    </view>
  </view>
  
  <checkbox-group bindchange="bindAgreeChange">
    <label class="weui-agree" for="weuiAgree">
      <view class="weui-agree__text">
        <checkbox class="weui-agree__checkbox" id="weuiAgree" value="agree" checked="{{isAgree}}" />
        <view class="weui-agree__checkbox-icon">
          <icon class="weui-agree__checkbox-icon-check" type="success_no_circle" size="9" wx:if="{{isAgree}}"></icon>
        </view>
        已阅读并同意
        
        <text data-status="1" bindtap="setModalysStatus" style="color:#576b95;">《推广协议》</text>
      </view>
    </label>
  </checkbox-group>
  <view class="weui-btn-area">
    <!--<button disabled="{{optionsData.state===1?true:false}}" class="weui-btn" type="primary" bindtap="addUserInfo" data-status="1">提交</button>-->
    <button form-type="submit" disabled="{{optionsData.state===1?true:false}}" class="weui-btn" type="primary"  data-status="1">提交</button>
  </view>
</view>

<view class="drawer_screen" data-status="0" wx:if="{{showModalysStatus}}"></view>
