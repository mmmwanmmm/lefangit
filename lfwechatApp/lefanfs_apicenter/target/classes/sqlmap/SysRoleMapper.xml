<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lefanfs.apicenter.dao.SysRoleMapper">
	<resultMap id="BaseResultMap" type="com.lefanfs.apicenter.model.SysRole">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="role_name" property="roleName" jdbcType="VARCHAR" />
		<result column="role_desc" property="roleDesc" jdbcType="VARCHAR" />
		<result column="createtime" property="createtime" jdbcType="TIMESTAMP" />
		<result column="updatetime" property="updatetime" jdbcType="TIMESTAMP" />
		<result column="is_delete" property="isDelete" jdbcType="SMALLINT" />
	</resultMap>

	<sql id="Base_Column_List">
		id, role_name, role_desc, createtime, updatetime, is_delete
	</sql>

	<select id="selectList" resultMap="BaseResultMap" parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />
		from sys_role
		where is_delete = 0
	</select>

	<select id="selectCount" resultType="java.lang.Integer" parameterType="java.util.Map">
		select count(1) from sys_role
		where is_delete = 0
	</select>

	<select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		from sys_role
		where id = #{id,jdbcType=INTEGER}
	</select>

	<update id="deleteByPrimaryKey" parameterType="java.lang.Integer">
		update sys_role set is_delete = 1
		where id = #{id,jdbcType=INTEGER}
	</update>

	<insert id="insert" parameterType="java.util.Map">
		insert into sys_role (
			role_name, role_desc, createtime, updatetime
		)
		values (
			#{roleName,jdbcType=VARCHAR}, #{roleDesc,jdbcType=VARCHAR},now(), now()
		)
	</insert>

	<update id="updateByPrimaryKey" parameterType="java.util.Map">
		update sys_role
		<set>
			<if test="roleName!=null">
				role_name = #{roleName,jdbcType=VARCHAR},
			</if>
			<if test="roleDesc!=null">
				role_desc = #{roleDesc,jdbcType=VARCHAR},
			</if>
			updatetime = now(),
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>

</mapper>