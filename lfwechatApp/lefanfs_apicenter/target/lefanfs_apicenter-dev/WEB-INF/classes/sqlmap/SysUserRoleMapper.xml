<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lefanfs.apicenter.dao.SysUserRoleMapper">
	<resultMap id="BaseResultMap" type="com.lefanfs.apicenter.model.SysUserRole">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="user_id" property="userId" jdbcType="INTEGER" />
		<result column="role_id" property="roleId" jdbcType="INTEGER" />
	</resultMap>

	<sql id="Base_Column_List">
		id, user_id, role_id
	</sql>

	<select id="selectList" resultMap="BaseResultMap" parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />
		from sys_user_role
		<where>
			<if test="userId!=null">
				and user_id = #{userId,jdbcType=INTEGER}
			</if>
		</where>
	</select>

	<select id="selectCount" resultType="java.lang.Integer" parameterType="java.util.Map">
		select count(1)
		from sys_user_role
		<where>
			<if test="userId!=null">
				and user_id = #{userId,jdbcType=INTEGER}
			</if>
			<if test="roleIdList!=null">
				and role_id in
				<foreach item="roleId" index="index" collection="roleIdList" open="(" separator="," close=")">
					#{roleId}
				</foreach>
			</if>
		</where>
	</select>


	<delete id="deleteByUserId" parameterType="java.lang.Integer">
		delete from sys_user_role where user_id = #{userId,jdbcType=INTEGER}
	</delete>

	<insert id="insert" parameterType="java.util.Map">
		insert into sys_user_role (
			user_id, role_id
		) 
		values (
			#{userId,jdbcType=INTEGER}, #{roleId,jdbcType=INTEGER}
		)
	</insert>

</mapper>