<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.2.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">
	<context:component-scan base-package="com.lefanfs.backend.web" />
	<context:property-placeholder location="classpath:*.properties"/>
	<mvc:annotation-driven />
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/pages" />
		<property name="suffix" value=".jsp" />
	</bean>
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<mvc:exclude-mapping path="/login**" />
			<mvc:exclude-mapping path="/doLogin**" />
			<bean class="com.lefanfs.backend.interceptors.LoginInterceptor" />
		</mvc:interceptor>
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<mvc:exclude-mapping path="/" />
			<mvc:exclude-mapping path="/login**" />
			<mvc:exclude-mapping path="/doLogin**" />
			<mvc:exclude-mapping path="/noAuthority**" />
			<mvc:exclude-mapping path="/logout**" />
			<mvc:exclude-mapping path="/home**" />
			<mvc:exclude-mapping path="/system/admin/**Password**" />
			<bean class="com.lefanfs.backend.interceptors.AuthorityInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors>
</beans>